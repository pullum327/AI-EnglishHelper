generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 單字收藏模型
model Word {
  id          String   @id @default(cuid())
  word        String   @unique
  translation String
  phonetic    String?
  partOfSpeech String?
  difficulty  Difficulty @default(BEGINNER)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sentences   Sentence[]
  
  @@map("words")
}

// 句子收藏模型
model Sentence {
  id          String   @id @default(cuid())
  english     String
  chinese     String
  difficulty  Difficulty @default(BEGINNER)
  category    String?   // 例如：日常對話、商務、學術等
  tags        String[]  // 標籤數組
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  words       Word[]   // 與單字的關聯
  
  @@map("sentences")
}

// 難度枚舉
enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}
